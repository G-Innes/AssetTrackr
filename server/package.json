  "main": "index.js",
  "scripts": {
    "build": "tsup src/index.ts",
    "start": "NODE_ENV=development ts-node src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "dev:ts-node": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "NODE_ENV=test jest --coverage",
    "test:e2e": "NODE_ENV=development ts-node src/index.ts",
    "dev": "tsx watch src",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "typeorm": "NODE_OPTIONS='-r tsconfig-paths/register' typeorm-ts-node-commonjs",
    "drop-db": "ts-node src/database/resetDatabase.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.8.2",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitest/coverage-v8": "3.1.3",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "pg-mem": "^2.8.1",
    "prettier": "^3.2.4",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsup": "^8.4.0",
    "tsx": "^4.7.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.3.3",
    "vitest": "3.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pino": "^9.2.0",
    "reflect-metadata": "^0.2.1",
    "ts-node": "^10.9.2",
    "zod": "^3.22.4"
  },
  "tsup": {
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "external": [
      "@mikro-orm",
      "mysql",
      "pg-promise",
      "slonik"
    ]
  }
